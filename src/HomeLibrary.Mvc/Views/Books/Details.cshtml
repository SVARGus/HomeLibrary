@model Book

@{
    ViewData["Title"] = "Просмотр книги";
}

<h1>@Model.Title</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Автор</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3">Год издания</dt>
            <dd class="col-sm-9">@Model.PublishYear</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>

            <dt class="col-sm-3">Жанр</dt>
            <dd class="col-sm-9">@Model.Genre</dd>

            <dt class="col-sm-3">Издательство</dt>
            <dd class="col-sm-9">@Model.Publisher</dd>

            <dt class="col-sm-3">Кол-во страниц</dt>
            <dd class="col-sm-9">@Model.PageCount</dd>

            <dt class="col-sm-3">Описание</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Дата создания</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")</dd>

            @if (Model.ModifiedDate.HasValue)
            {
                <dt class="col-sm-3">Дата изменения</dt>
                <dd class="col-sm-9">@Model.ModifiedDate.Value.ToString("dd.MM.yyyy HH:mm")</dd>
            }
        </dl>

        @if (!string.IsNullOrEmpty(Model.TableOfContents))
        {
            <h5>Оглавление</h5>
            <div class="border rounded p-3 bg-light">
                @Html.Raw(TableOfContentsHelper.ToHtml(Model.TableOfContents))
            </div>
        }
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Изменить</a>
    <a asp-action="Index" class="btn btn-secondary">К списку</a>
</div>
