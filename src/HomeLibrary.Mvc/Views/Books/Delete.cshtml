@model Book

@{
    ViewData["Title"] = "Удалить книгу";
}

<h1>Удалить книгу</h1>

<div class="alert alert-danger">
    Вы уверены, что хотите удалить эту книгу?
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Название</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Автор</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3">Год издания</dt>
            <dd class="col-sm-9">@Model.PublishYear</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
